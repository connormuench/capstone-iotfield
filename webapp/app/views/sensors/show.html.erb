<%= form_for [@facility, @sensor], method: :patch, html: {id: 'editSensorForm'} do |f| %>
  <div class="row mt-5 mx-auto">
    <div class="col-xs my-auto">
      <h1>
        <span class="form-toggle"><%= @sensor.point.name %></span>
        <%= f.text_field :name, class: 'form-toggle', value: @sensor.point.name, style: 'display: none;' %>
      </h1>
    </div>

    <% if current_user.is_admin %>
      <div class="col-xs my-auto">
        <!-- Form submission button group -->
        <div class="btn-group form-toggle" role="group" aria-label="Manipulate sensor" style="display: none;">
          <a href="javascript:void(0)" class="btn btn-success" title="Save changes" onclick="$('#editSensorForm').submit()"><%= ion_icon('checkmark') %></a>
          <a href="javascript:void(0)" class="btn btn-danger" title="Discard changes" onclick="discardChanges($('#editSensorForm'))"><%= ion_icon('close') %></a>
        </div>
        <!-- Facility manipulation button group -->
        <div class="btn-group form-toggle" role="group" aria-label="Manipulate facility">
          <%= link_to ion_icon('edit'), 'javascript:void(0)', class: 'btn btn-info facility-manip', title: 'Edit the sensor', onclick: 'editAttributes()' %>
          <%= link_to ion_icon('trash-b'), facility_sensor_path(@sensor, @facility.id), method: :delete, class: 'btn btn-danger facility-manip', title: 'Delete the sensor', data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row my-2">
    <div class="col-sm-2">
      <b>Network address</b>
    </div>
    <div class="col-sm-10">
      <%= @sensor.network_address + ':' + @sensor.network_port.to_s %>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-sm-2">
      <b><%= f.label :location, class: 'my-auto' %></b>
    </div>
    <div class="col-sm-10">
      <span class="form-toggle"><%= @sensor.location %></span>
      <%= f.text_field :location, class: 'form-control form-toggle', placeholder: 'Coordinates or address', value: @sensor.location, style: 'display:none;' %>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-sm-2">
      <b><%= f.label :description, class: 'my-auto' %></b>
    </div>
    <div class="col-sm-10">
      <span class="form-toggle"><%= @sensor.description %></span>
      <%= f.text_area :description, class: 'form-control form-toggle', value: @sensor.description, style: 'display:none;' %>
    </div>
  </div>
<% end %>

<div class="row mt-3">
  <div class="col-md-6">
    <div class="row mx-auto my-2">
      <div class="col-xs my-auto">
        <h3>Sensors</h3>
      </div>
    </div>
    <%= render partial: 'sensors/list_sensors', locals: { sensors: @sensors } %>
  </div>
  <div class="col-md-6">
    <div class="row mx-auto my-2">
      <div class="col-xs my-auto">
        <h3>Controllable Devices</h3>
      </div>
      <% if @access_level.level == 'Controller' %>
        <div class="col-xs ml-lg-auto ml-md-0 ml-sm-auto my-auto">
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Set all to...
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="#">Manual</a>
              <a class="dropdown-item" href="#">Automatic</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= render partial: 'controllable_devices/list_controllable_devices', locals: { controllable_devices: @controllable_devices } %>
  </div>
</div>

<%= render partial: 'add_point_modal' %>
