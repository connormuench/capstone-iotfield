<%= fields_for :point do |ff| %>
  <div class="row mt-5 mx-auto">
    <div class="col-xs my-auto">
      <h1 class="mr-3">
        <span class="form-toggle"><%= point.name %></span>
        <%= ff.text_field :name, class: 'form-toggle', value: point.name, style: 'display: none;' %>
      </h1>
    </div>

    <% if current_user.is_admin %>
      <div class="col-xs my-auto">
        <!-- Form submission button group -->
        <div class="btn-group form-toggle" role="group" aria-label="Manipulate <%= point_type %>" style="display: none;">
          <a href="javascript:void(0)" class="btn btn-success" title="Save changes" onclick="$('#editSensorForm').submit()"><%= ion_icon('checkmark') %></a>
          <a href="javascript:void(0)" class="btn btn-danger" title="Discard changes" onclick="discardChanges($('#editSensorForm'))"><%= ion_icon('close') %></a>
        </div>
        <!-- Facility manipulation button group -->
        <div class="btn-group form-toggle" role="group" aria-label="Manipulate <%= point_type %>">
          <%= link_to ion_icon('edit'), 'javascript:void(0)', class: 'btn btn-info manip-button', title: 'Edit the ' + point_type, onclick: 'editAttributes()' %>
          <%= link_to ion_icon('trash-b'), path, method: :delete, class: 'btn btn-danger manip-button', title: 'Delete the ' + point_type, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row my-2">
    <div class="col-sm-2">
      <b class="my-auto">Facility</b>
    </div>
    <div class="col-sm-10">
      <span> <%= link_to @facility.name, @facility %> </span>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-sm-2">
      <b>Remote ID</b>
    </div>
    <div class="col-sm-10">
      <%= point.end_device.address + ':' + point.remote_id.to_s %>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-sm-2">
      <b><%= ff.label :location, class: 'my-auto' %></b>
    </div>
    <div class="col-sm-10">
      <span class="form-toggle"><%= point.location %></span>
      <%= ff.text_field :location, class: 'form-control form-toggle', placeholder: 'Coordinates or address', value: point.location, style: 'display:none;' %>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-sm-2">
      <b><%= ff.label :description, class: 'my-auto' %></b>
    </div>
    <div class="col-sm-10">
      <span class="form-toggle"><%= point.description %></span>
      <%= ff.text_area :description, class: 'form-control form-toggle', value:  point.description, style: 'display:none;' %>
    </div>
  </div>
<% end %>

