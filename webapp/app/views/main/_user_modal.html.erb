<%= fields_for :user do |ff| %>
  <div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="nameLabel">Create New User</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row my-2">
            <div class="col-sm-2">
              <b class="my-auto">Name</b>
            </div>
            <div class="col-sm-10">
              <%= ff.text_field :name, class: 'form-control form-toggle'%>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-sm-2">
              <b class: ="my-auto">ID</b>
            </div>
            <div class="col-sm-10">
              <%= ff.text_field :id, class: 'form-control form-toggle'%>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-sm-2">
              <b class="my-auto">Username</b>
            </div>
            <div class="col-sm-10">
              <%= ff.text_field :username, class: 'form-control form-toggle'%>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-sm-2">
              <b class: ="my-auto">Password</b>
            </div>
            <div class="col-sm-10">
              <%= ff.text_field :password, class: 'form-control form-toggle'%>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-sm-2">
              <b>Email</b>
            </div>
            <div class="col-sm-10">
              <%= ff.text_field :email, class: 'form-control form-toggle'%>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-sm-2">
              <b>Admin</b>
            </div>
            <div class="col-sm-10">
              <%= ff.text_field :admin, class: 'form-control form-toggle'%>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-success" onclick="$('#addPointForm').submit()">Create</button>
        </div>
      </div>
    </div>
  </div>
<% end %>