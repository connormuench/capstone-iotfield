<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="nameLabel">Create New User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for User.new, html: {id: 'addUserForm'} do |f| %>
          <div class="row my-2">
            <div class="col-sm-2 my-auto">
              <b>Username</b>
            </div>
            <div class="col-sm-10 my-auto">
              <%= f.text_field :username, class: 'form-control form-toggle'%>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-sm-2 my-auto">
              <b>Password</b>
            </div>
            <div class="col-sm-10 my-auto">
              <%= f.password_field :password, class: 'form-control form-toggle'%>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-sm-2 my-auto">
              <b>Confirm Password</b>
            </div>
            <div class="col-sm-10 my-auto">
              <%= f.password_field :password_confirmation, class: 'form-control form-toggle'%>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-sm-2 my-auto">
              <b>Name</b>
            </div>
            <div class="col-sm-10 my-auto">
              <%= f.text_field :name, class: 'form-control form-toggle'%>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-sm-2 my-auto">
              <b>Email</b>
            </div>
            <div class="col-sm-10 my-auto">
              <%= f.text_field :email, class: 'form-control form-toggle'%>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-sm-2 my-auto">
              <b>Admin</b>
            </div>
            <div class="col-sm-10 my-auto">
               <%= f.check_box :is_admin, class: 'form-toggle' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success" onclick="$('#addUserForm').submit()">Create</button>
      </div>
    </div>
  </div>
</div>