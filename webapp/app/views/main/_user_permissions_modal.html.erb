<!-- User Permissions Modal -->
<div class="modal fade" id="userPermissionsModal" tabindex="-1" role="dialog" aria-labelledby="userPermissionsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="userPermissionsModalLabel">set NAME permissions</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-bordered">
          <tr>
            <th scope="col">Facility</th>
            <th scope="col">Access Level</th>
          </tr>
          <% Facility.all.each do |facility| %>
            <tr>
              <td><%= facility.name%></td>
              <td>
                <div class="btn-group" role="group" aria-label="options" data-toggle="buttons" id="facility<%= facility.id %>">

                  <label class="btn btn-primary">
                    <input type="radio" name="pointTypes" autocomplete="off" class="level-none"> None
                  </label>

                  <label class="btn btn-primary">
                    <input type="radio" name="pointTypes" autocomplete="off" class="level-monitor"> Monitor
                  </label>

                  <label class="btn btn-primary">
                    <input type="radio" name="pointTypes" autocomplete="off" class="level-controller"> Controller
                  </label>
                </div>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" onclick="$('#addPointForm').submit()">Save</button>
    </div>
  </div>
</div>
