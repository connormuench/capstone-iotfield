<!-- User Permissions Modal -->
<div class="modal fade" id="facilityPermissionsModal" tabindex="-1" role="dialog" aria-labelledby="facilityPermissionsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="facilityPermissionsModalLabel">set NAME permissions</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for :facility, method: :post, html: { id: 'setFacilityPermissionsForm' } do |f| %>
          <table class="table table-bordered">
            <tr>
              <th scope="col">User</th>
              <th scope="col">Access Level</th>
            </tr>
            <% User.all.sort_by { |user| user.username.downcase }.each do |user| %>
              <tr>
                <td><%= user.username%></td>
                <td>
                  <div class="btn-group" role="group" aria-label="options" data-toggle="buttons" id="user<%= user.id %>">

                    <label class="btn btn-primary">
                      <input type="radio" name="user[<%= user.id %>]" autocomplete="off" class="level-none" value="None"> None
                    </label>

                    <label class="btn btn-primary">
                      <input type="radio" name="user[<%= user.id %>]" autocomplete="off" class="level-monitor" value="Monitor"> Monitor
                    </label>

                    <label class="btn btn-primary">
                      <input type="radio" name="user[<%= user.id %>]" autocomplete="off" class="level-controller" value="Controller"> Controller
                    </label>
                  </div>
                </td>
              </tr>
            <% end %>
          </table>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" onclick="$('#setFacilityPermissionsForm').submit()">Save</button>
      </div>
    </div>
  </div>
</div>
